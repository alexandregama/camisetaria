<html>

<%= nav_bar brand: "Kunstee", brand_link: root_url %>

<body>
	Produtos - Ordenação por Nome
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Nome</th>	
				<th>Descrição</th>	
				<th>Preço</th>	
				<th>Quantidade</th>
			</tr>
		</thead>
		<tbody>
			<% @produtos_por_nome.each do |produto| %>
			<tr>
				<td><%= produto.name %></td>	
				<td><%= produto.descricao %></td>
				<td><%= produto.preco %></td>
				<td><%= produto.quantidade %></td>
			</tr>			
			<% end %>
		</tbody>
	</table>

	<br/>

	Produtos - Ordenação por Preço
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Nome</th>	
				<th>Descrição</th>	
				<th>Preço</th>	
				<th>Quantidade</th>
			</tr>
		</thead>
		<tbody>
			<% @produtos_por_preco.each do |produto| %>
			<tr>
				<td><%= produto.name %></td>	
				<td><%= produto.descricao %></td>
				<td><%= produto.preco %></td>
				<td><%= produto.quantidade %></td>
			</tr>			
			<% end %>
		</tbody>
	</table>	
</body>

</html>